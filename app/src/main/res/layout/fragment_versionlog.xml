<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/version_tab_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/version_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v95.1.1"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_date_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/25/2022"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_number_1_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_number_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first version"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_number_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home tab selects teammate and opponent heroes"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_number_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="winrate tab displays heroes to be chosen"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/setting_size" />

        <TextView
            android:id="@+id/version_number_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="settings tab includes version, contact"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/setting_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="vertical" />

</LinearLayout>